{
  "name": "Amelia",
  "repository": "https://github.com/kriansa/amelia",
  "success_url": "/",
  "env": {
    "DATABASE_URL": {
      "description": "The database URL",
      "value": "mysql2://root@localhost:3306/amelia_dev"
    },
    "DB_POOL": {
      "description": "The database connection pool size",
      "value": "5"
    },
    "DB_REAPING_FREQUENCY": {
      "description": "Frequency in seconds to periodically run the Reaper",
      "value": "5"
    },
    "DB_CONNECT_TIMEOUT": {
      "description": "Maximum time to open the connection",
      "value": "5"
    },
    "DB_CHECKOUT_TIMEOUT": {
      "description": "Maximum time to checkout a connection from the pool",
      "value": "5"
    },
    "DB_READ_TIMEOUT": {
      "description": "Maximum time to receive data after connected",
      "value": "5"
    },
    "DB_WRITE_TIMEOUT": {
      "description": "Maximum time to send data after connected",
      "value": "5"
    },
    "DEVISE_PEPPER": {
      "description": "A secret key used by Devise.",
      "generator": "secret"
    },
    "BUGSNAG_KEY": {
      "description": "The secret key used to send logs to devise",
      "value": ""
    },
    "BASE_URL": {
      "description": "The URL to this app",
      "value": "http://localhost:3000"
    },
    "ASSETS_URL": {
      "description": "The URL to the assets of this app",
      "value": "http://localhost:3000"
    },
    "SMTP_ADDRESS": {
      "description": "The SMTP server address",
      "value": "localhost"
    },
    "SMTP_PORT": {
      "description": "The SMTP port number",
      "value": "1025"
    },
    "SMTP_USERNAME": {
      "description": "The SMTP authentication username",
      "value": ""
    },
    "SMTP_DOMAIN": {
      "description": "The SMTP authentication domain",
      "value": ""
    },
    "SMTP_PASSWORD": {
      "description": "The SMTP authentication password",
      "value": ""
    },
    "SMTP_AUTHENTICATION": {
      "description": "The SMTP authentication mode",
      "value": "plain"
    },
    "MAIL_FROM": {
      "description": "The email this app sends from",
      "value": ""
    },
    "HEROKU_APP_NAME": {
      "description": "The application name for heroku deployment",
      "value": "myappname"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
