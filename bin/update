#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../', __FILE__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

# Disable installation of some gems if desired
no_gems_argument = if ENV['ONLY_CI_GEMS']
                     '--without development'
                   elsif ENV['ONLY_PRODUCTION_GEMS']
                     '--without development test'
                   else
                     ''
                   end

disable_migrations = ENV.key?('DISABLE_MIGRATIONS')

FileUtils.chdir APP_ROOT do
  puts '== Installing dependencies =='
  system('bin/bundle check') || system!("bin/bundle install -j4 #{no_gems_argument}")
  system('bin/bundle-detached check') || system!("bin/bundle-detached install -j4 #{no_gems_argument}")

  puts "\n== Updating NPM packages =="
  system! 'yarn install'

  unless disable_migrations
    puts "\n== Updating database =="
    system! 'bin/rails db:migrate'
  end

  puts "\n== Removing old logs and tempfiles =="
  system! 'bin/rails log:clear tmp:clear'

  puts "\nNow restart Rails and gulp watcher!"
end
